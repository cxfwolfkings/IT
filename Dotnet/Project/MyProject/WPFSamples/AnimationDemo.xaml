<Window x:Class="SC.WPFSamples.AnimationDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC.WPFSamples"
        mc:Ignorable="d"
        Title="AnimationDemo" Height="240" Width="500">
    <StackPanel>
        <Button Content="Ellipse Animation" Click="OnEllipseAnimation" />
        <Button Content="Button Animation" Click="OnButtonAnimation" />
        <Button Content="Keyframe Animation" Click="OnKeyframeAnimation" />
        <Button Content="Event Trigger" Click="OnEventTrigger" />
    </StackPanel>
</Window>
