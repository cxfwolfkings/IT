<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>后台管理</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/easyui.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/icon.css")">
    @RenderSection("Styles", required: false)
</head>
<body class="easyui-layout">
    <div data-options="region:'north',border:false" style="height:60px;background:#B3DFDA;padding:10px">
        <span style="line-height:40px;font-weight:bold;font-size:x-large">微商后台管理系统</span>
    </div>
    <div data-options="region:'west',split:true,title:'菜单栏'" style="width:150px;padding:10px;">
        <ul class="easyui-tree" data-options="onClick: function(node ) { showTable(node); }">
            <li>
                <span>后台管理</span>
                <ul>
                    <li data-options="state:'closed'">
                        <span>商品</span>
                        <ul>
                            <li><span>Friend</span></li>
                        </ul>
                    </li>
                    <li>商品类别</li>
                </ul>
            </li>
        </ul>
    </div>
    <div data-options="region:'east',split:true,collapsed:true,title:'工具栏'" style="width:100px;padding:10px;">

    </div>
    <div data-options="region:'south',border:false" style="height:50px;background:#A9FACD;padding:10px;">
        Made By Colin
    </div>
    <div data-options="region:'center',title:'Center'">
        @RenderBody()
    </div>
</body>
</html>
<script type="text/javascript" src="@Url.Content("~/js/jquery.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/js/jquery.easyui.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/js/site.js")"></script>
@RenderSection("Scripts", required: false)